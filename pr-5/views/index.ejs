<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Movie App</title>

  <style>
    /* ==== GLOBAL RESET ==== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(180deg, #fdfdfd, #f8f8f8);
      color: #222;
      overflow-x: hidden;
    }

    /* ==== HEADER ==== */
    .main-header {
      background: #fff;
      padding: 14px 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      transition: all 0.3s ease;
    }

    .main-header .container {
      max-width: 1200px;
      margin: auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo img {
      width: 130px;
      transition: transform 0.3s ease;
    }

    .logo img:hover {
      transform: scale(1.08);
    }

    .nav-links {
      display: flex;
      gap: 28px;
      align-items: center;
    }

    .nav-links a {
      color: #111;
      text-decoration: none;
      font-weight: 600;
      font-size: 16px;
      position: relative;
      letter-spacing: 0.3px;
      padding-bottom: 4px;
      transition: all 0.3s ease;
    }

    .nav-links a::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 2px;
      background-color: #e31c25;
      border-radius: 2px;
      transition: width 0.3s ease;
    }

    .nav-links a:hover {
      color: #e31c25;
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    /* ==== FILTER BAR ==== */
    .filter-section {
      background: #fff;
      padding: 20px 0;
      box-shadow: 0 2px 12px rgba(227, 28, 37, 0.08);
      border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .filter-section .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
      max-width: 1200px;
      margin: auto;
    }

    .filter-btn {
      padding: 9px 18px;
      font-size: 15px;
      font-weight: 600;
      border-radius: 25px;
      border: 2px solid #e31c25;
      color: #e31c25;
      background: transparent;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .filter-btn:hover {
      background: #e31c25;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(227, 28, 37, 0.2);
    }

    /* ==== SEARCH BAR ==== */
    .search-bar {
      display: flex;
      align-items: center;
      background: #fff;
      border: 1.5px solid #e31c25;
      border-radius: 40px;
      padding: 5px 10px;
      box-shadow: 0 2px 5px rgba(227, 28, 37, 0.1);
    }

    .search-bar input {
      width: 220px;
      padding: 8px 10px;
      border: none;
      outline: none;
      font-size: 15px;
      font-weight: 500;
      color: #222;
      background: transparent;
    }

    .search-bar input::placeholder {
      color: #aaa;
      font-style: italic;
    }

    .search-btn {
      padding: 8px 16px;
      border-radius: 25px;
      border: none;
      background: #e31c25;
      color: #fff;
      font-weight: 600;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .search-btn:hover {
      background: #fff;
      color: #e31c25;
      border: 1.5px solid #e31c25;
      transform: translateY(-2px);
      box-shadow: 0 3px 8px rgba(227, 28, 37, 0.2);
    }

    /* ==== MOVIE GRID ==== */
    .movie-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
      gap: 22px;
      padding: 50px 60px;
      max-width: 1300px;
      margin: auto;
    }

    .movie-card {
      background: #fff;
      border-radius: 14px;
      overflow: hidden;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      text-align: center;
      cursor: pointer;
    }

    .movie-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .movie-card img {
      width: 100%;
      height: 240px;
      object-fit: cover;
      border-bottom: 3px solid #e31c25;
    }

    .movie-content {
      padding: 15px 10px 20px;
    }

    .movie-title {
      font-weight: 700;
      font-size: 17px;
      margin-bottom: 6px;
      color: #111;
      text-transform: capitalize;
    }

    .movie-info {
      font-size: 14px;
      color: #555;
      margin: 4px 0;
    }

    .movie-info strong {
      color: #e31c25;
    }

    .button-group {
      margin-top: 12px;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 8px;
    }

    .action-btn {
      text-decoration: none;
      padding: 7px 12px;
      font-size: 13px;
      font-weight: 600;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .edit-btn {
      background-color: #007bff;
      color: #fff;
    }

    .edit-btn:hover {
      background-color: #0056b3;
    }

    .delete-btn {
      background-color: #e31c25;
      color: #fff;
    }

    .delete-btn:hover {
      background-color: #b91c23;
    }

    .view-btn {
      background-color: #222;
      color: #fff;
    }

    .view-btn:hover {
      background-color: #444;
    }

    /* ==== RESPONSIVE ==== */
    @media (max-width: 768px) {
      .filter-section .container {
        flex-direction: column;
        align-items: center;
      }

      .movie-grid {
        padding: 20px;
      }

      .search-bar input {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <header class="main-header">
    <div class="container">
      <a href="/" class="logo">
        <img src="https://cdn.prod.website-files.com/600ee75084e3fe0e5731624c/65b6384089ec9e265952391f_bookmyshow-logo-vector-removebg-preview%20(1).png" alt="logo">
      </a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/add">Add Movie</a>
      </div>
    </div>
  </header>

  <section class="filter-section">
    <div class="container">
      <div class="category">
        <form action="/" method="get" style="display:inline-block;">
          <input type="hidden" name="category" value="Bollywood">
          <button type="submit" class="filter-btn">Bollywood</button>
        </form>
        <form action="/" method="get" style="display:inline-block;">
          <input type="hidden" name="category" value="Hollywood">
          <button type="submit" class="filter-btn">Hollywood</button>
        </form>
        <form action="/" method="get" style="display:inline-block;">
          <input type="hidden" name="category" value="Tollywood">
          <button type="submit" class="filter-btn">Tollywood</button>
        </form>
        <form action="/" method="get" style="display:inline-block;">
          <input type="hidden" name="category" value="Gujarati">
          <button type="submit" class="filter-btn">Gujarati</button>
        </form>
        <form action="/" method="get" style="display:inline-block;">
          <input type="hidden" name="category" value="">
          <button type="submit" class="filter-btn">All</button>
        </form>
      </div>

      <div class="search-bar">
        <form method="get" action="/" style="display: flex; align-items: center;">
          <input type="text" name="search" placeholder="Search movies..." />
          <button type="submit" class="search-btn">Search</button>
        </form>
      </div>
    </div>
  </section>

  <div class="movie-grid">
    <% allMovies.forEach((movie)=> { %>
      <div class="movie-card">
        <a href="/view-movie/<%= movie._id %>">
          <img src="/<%= movie.image %>" alt="<%= movie.title %>">
        </a>
        <div class="movie-content">
          <div class="movie-title"><%= movie.title %></div>
          <div class="movie-info"><strong>Director:</strong> <%= movie.director %></div>
          <div class="movie-info"><strong>Genre:</strong> <%= movie.genre %></div>
          <div class="movie-info"><strong>Year:</strong> <%= movie.year %></div>
          <div class="button-group">
            <a href="/edit-movie/<%= movie.id %>" class="action-btn edit-btn">Edit</a>
            <a href="/delete-movie/<%= movie.id %>" class="action-btn delete-btn">Delete</a>
            <a href="/view-movie/<%= movie._id %>" class="action-btn view-btn">View</a>
          </div>
        </div>
      </div>
    <% }); %>
  
  
</div>
</body>
</html>
