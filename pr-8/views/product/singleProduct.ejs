<%- include('../header') %>

    <div class="page-wrapper">
        <div class="container-fluid mt-5" height="500px">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card shadow-lg border-0">
                        <div class="row no-gutters">

                            <!-- Product Image -->
                            <div class="col-md-5">
                                <img src="<%= product.productImage %>" alt="<%= product.title %>"
                                    class="img-fluid w-100"
                                    style="object-fit: cover; border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;">
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h2 class="card-title font-weight-bold text-black">
                                        <%= product.title %>
                                    </h2>

                                    <p class="text-muted">
                                        <%= product.desc %>
                                    </p>

                                    <hr>

                                    <strong>Category:</strong>
                                    <%= product.category.categoryName %><br>

                                        <strong>Subcategory:</strong>
                                        <%= product.subcategory.subCategoryName %><br>

                                            <strong>Extra Category:</strong>
                                            <%= product.extracategory.extraCategory %>
                                                <br>

                                                <div class="mb-3">
                                                    <strong>Price:</strong>
                                                    <span class="text-primary h5">â‚¹ <%= product.price %></span><br>
                                                    <strong> Quantity:</strong>
                                                    <%= product.quantity %> units
                                                </div>

                                                <div class="mt-4">
                                                    <a href="/product/edit-product/<%= product._id %>"
                                                        class="btn btn-primary"><i class="fas fa-edit"></i></a>



                                                    <a href="/product/delete-product/<%= product._id %>"
                                                        class="btn btn-danger ml-2">
                                                        <i class="fas fa-trash"></i> </a>

                                                    <a href="/product/view-product" class="btn btn-secondary ml-2">
                                                      Back  <i class="fas fa-arrow-right"></i></a>
                                                </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>